<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="90dp"
    android:layout_width="200dp"
    android:layout_height="330dp"
    android:background="@drawable/living"
    android:id="@+id/background"
    android:weightSum="1">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/des_4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/delete_4"
        android:id="@+id/listviewDone" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/name_4" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/delete"
        android:id="@+id/delete_4"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/name_4"
        android:layout_toEndOf="@+id/name_4"
        android:layout_marginBottom="23dp" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/check"
        android:id="@+id/confirm_4"
        android:layout_alignTop="@+id/delete_4"
        android:layout_alignRight="@+id/des_4"
        android:layout_alignEnd="@+id/des_4" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/des_4"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="86dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>